__conda_setup="$('/home/isism/miniconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/isism/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/home/isism/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/isism/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
